	<!-- 매퍼파일의 위치 설정 : SQL쿼리 결과와 자바빈 매핑 -->
	<mappers>
		<mapper resource="onememo/mybatis/mapper/onememo.xml"/>
		<mapper resource="onememo/mybatis/mapper/linecomment.xml"/>
		<mapper resource="onememo/mybatis/dynamicsql.xml"/>
	</mappers>
</configuration>