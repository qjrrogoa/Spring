<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace 속성 : 매퍼파일의 완전한 경로를 넣음. .xml은 생략
	 ※ ibatis와는 다르게 id값에 .(dot)을 사용 못한다.	 -->
<mapper namespace="onememo.mybatis.mapper.linecomment">
	<!-- resultType을 Map으로 전달하는 경우, 컬럼명이 key(대문자)가 되고 row의 값이 value가 된다. -->
	<select id="commentSelectList" parameterType="Map" resultType="Map">
		 SELECT L.*,m.name FROM MEMBER m JOIN LINECOMMENTS L ON m.id = L.id WHERE NO=#{no} ORDER BY LNO DESC
	</select>
	
	<!-- 마이바티스의 resultMap의 collection 사용시 resultType을 DTO로 해야한다. -->
	<select id="commentSelectList2" parameterType="Map" resultType="com.kosmo.springapp.onememo.service.LineCommentDTO">
		 SELECT L.*,m.name FROM MEMBER m JOIN LINECOMMENTS L ON m.id = L.id WHERE NO=#{no} ORDER BY LNO DESC
	</select>
	<!-- useGeneratedKeys="true" keyProperty="lno" 해당 속성을 추가하면
		 INSERT가 실행된 행의 KeyProperty에 지정한 컬럼명(lno)의 값이 반환된다.
	  	 ※ 단, autoincrement를 지원하는 MySql이나 MS-SQL 등만 사용이 가능함.
		 Oracle의 경우 하위태그로 selectKey 태그를 사용한다.
		 
		 아래의 쿼리가 실행되서 파라미터로 전달된 Map의 LNO가 value는
		 SEQ_LINECOMMENTS.NEXTVAL 으로 설정된다.
	 -->
	<insert id="commentInsert" parameterType="Map">
	<!-- 마지막으로 INSERT된 행(lno)의 번호를 반환함 -->
	 <selectKey keyProperty="lno" resultType="int" order="BEFORE">
	 	SELECT SEQ_LINECOMMENTS.NEXTVAL FROM DUAL
	  </selectKey>
	  <!-- 셀렉트키 태그에서 시퀀스가 +1된 상태이기 때문에 인설트에서는 현재 시퀀스로 처리함 -->
		INSERT INTO linecomments VALUES(SEQ_LINECOMMENTS.CURRVAL, #{linecomment}, DEFAULT,#{id},#{no})
	</insert>
	
	<update id="commentUpdate" parameterType="Map">
		UPDATE linecomments SET linecomment=#{linecomment} WHERE lno=#{lno}
	</update>
	
	<delete id="commentDelete" parameterType="Map">
		DELETE linecomments WHERE lno=#{lno}
	</delete>
</mapper>